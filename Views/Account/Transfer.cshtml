@model BankWA.Models.ViewModels.TransferViewModel

@{
    ViewData["Title"] = "Transfer";
}

<link href="~/css/bootstrap.css" rel="stylesheet" />
<link href="~/css/style3.css" rel="stylesheet" />

<div class="container mt-5">
    <h2 class="text-center">Transfer Money</h2>
    <form asp-action="Transfer" method="post" class="mt-4">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="ReceiverEmail" class="control-label"></label>
            <select asp-for="ReceiverEmail" class="form-control" asp-items="ViewBag.ReceiverEmails">
                <option value="-1" class="text-center">-- Select --</option>
            </select>
            <span asp-validation-for="ReceiverEmail" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Amount" class="control-label"></label>
            <input asp-for="Amount" class="form-control" />
            <span asp-validation-for="Amount" class="text-danger"></span>
        </div>
        <div class="form-group text-center">
            <input type="submit" value="Transfer" class="btn btn-primary" />
        </div>
    </form>
    <div class="text-center mt-3">
        <a asp-action="Profile" class="btn btn-secondary">Back to Profile</a>
    </div>
</div>

@section Scripts {
    <script src="~/js/jquery.js"></script>
    <script src="~/js/bootstrap.bundle.min.js"></script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}












