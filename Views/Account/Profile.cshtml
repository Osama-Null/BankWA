@using Microsoft.AspNetCore.Identity
@model IEnumerable<Transaction>
@inject SignInManager<AppUser> _signInManager
@inject UserManager<AppUser> _userManager;

@{
	ViewData["Title"] = "Profile";
}

<link href="~/css/style3.css" rel="stylesheet" />

<div class="card">
	<h2 class="user-name">@User.Identity!.Name</h2>
	<p class="balance">Available Balance: $1,234.56</p>
	<div class="buttons">
		<button class="btn send">Send</button>
		<button class="btn deposit">Deposit</button>
		<button class="btn withdraw">Withdraw</button>
	</div>
</div>
<br />
<div>
	<h2 class="table-header">My Transactions</h2>
	<table class="table">
		<thead>
			<tr>
				<th>Date</th>
				<th>Amount</th>
				<th>Type</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var transaction in Model)
			{
				<tr>
					<td>@transaction.Date.ToString("g")</td>
					<td>$@transaction.Amount</td>
					<td>@transaction.Type</td>
				</tr>
			}
		</tbody>
	</table>
</div>